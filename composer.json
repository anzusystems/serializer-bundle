{
    "name": "anzusystems/serializer-bundle",
    "description": "Serializer bundle.",
    "type": "symfony-bundle",
    "keywords": ["symfony", "anzusystems"],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "AnzuSystems Community",
            "homepage": "https://github.com/orgs/anzusystems/people"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "doctrine/common": "^3.3"
    },
    "require-dev": {
        "doctrine/annotations": "^2.0",
        "doctrine/doctrine-bundle": "^2.10",
        "doctrine/orm": "^2.13",
        "nelmio/api-doc-bundle": "^4.9",
        "slevomat/coding-standard": "^8.14",
        "symfony/dotenv": "6.*|7.*",
        "symfony/test-pack": "^1.1",
        "symfony/uid": "6.*|7.*",
        "symplify/easy-coding-standard": "^12.0",
        "vimeo/psalm": "^5.16"
    },
    "suggest": {
        "doctrine/orm": "Enable EntityIdHandler."
    },
    "autoload": {
        "psr-4": {
            "AnzuSystems\\SerializerBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AnzuSystems\\SerializerBundle\\Tests\\": "tests",
            "AnzuSystems\\SerializerBundle\\Tests\\TestApp\\": "tests/TestApp"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    }
}
